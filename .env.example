# VonkFi Environment Configuration
# Copy this file to .env and update the values for your deployment

# Database Configuration
DATABASE_URL=postgresql://vonkfi_user:your_secure_password@localhost:5432/vonkfi

# Alternative database configuration (if not using DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=vonkfi_user
PGPASSWORD=your_secure_password
PGDATABASE=vonkfi

# Server Configuration
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# Session Configuration (optional - generates automatically if not set)
SESSION_SECRET=your_random_session_secret_here

# Application Settings
# Maximum file upload size in MB
MAX_FILE_SIZE=10

# Enable/disable features
ENABLE_DEMO_USER=false
ENABLE_AI_FEATURES=true