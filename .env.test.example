# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/vonkfi_test
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5432
TEST_DATABASE_NAME=vonkfi_test
TEST_DATABASE_USER=test
TEST_DATABASE_PASSWORD=test

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_SECRET=test-session-secret-key-for-testing-only
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=3600000

# Authentication Configuration
DISABLE_AUTH_FOR_TESTS=true
TEST_MODE=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./test-uploads

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Rate Limiting (Disabled for tests)
RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# CI/CD Specific Configuration
CI=false
SKIP_DB_TESTS=false
USE_MOCK_STORAGE=false

# Test Performance Optimization
VITEST_MIN_THREADS=1
VITEST_MAX_THREADS=1
VITEST_CI_PARALLEL=false

# Test Data Configuration
TEST_DATA_CLEANUP=true
TEST_ISOLATION_ENABLED=true
TEST_SCHEMA_ISOLATION=true

# Security Configuration (for testing)
BCRYPT_ROUNDS=4
JWT_SECRET=test-jwt-secret
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# External Service Configuration (for testing)
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_RETRIES=1