# Integration Test Environment Configuration
NODE_ENV=integration
PORT=3002

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/vonkfi_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Session Configuration
SESSION_SECRET=integration-test-session-secret
SESSION_COOKIE_SECURE=false

# Authentication Configuration
DISABLE_AUTH_FOR_TESTS=false
TEST_MODE=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./integration-test-uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/integration.log

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# External Service Configuration (Mock endpoints)
MOCK_EXTERNAL_SERVICES=true