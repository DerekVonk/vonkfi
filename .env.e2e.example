# E2E Test Environment Configuration
NODE_ENV=e2e
PORT=3003

# Database Configuration
DATABASE_URL=postgresql://test:test@localhost:5432/vonkfi_test

# Session Configuration
SESSION_SECRET=e2e-test-session-secret
SESSION_COOKIE_SECURE=false

# Authentication Configuration
DISABLE_AUTH_FOR_TESTS=false
TEST_MODE=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./e2e-test-uploads

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/e2e.log

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# E2E Test Configuration
E2E_TEST_TIMEOUT=30000
E2E_TEST_USER_EMAIL=test@vonkfi.com
E2E_TEST_USER_PASSWORD=TestPassword123!

# Mock Configuration
MOCK_EXTERNAL_SERVICES=true
MOCK_FILE_UPLOADS=true